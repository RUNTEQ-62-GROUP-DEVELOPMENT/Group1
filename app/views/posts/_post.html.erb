<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= post.title %>
          </h4>
          <div class='ms-auto'>
        </div>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= post.user.name %></li>
        </ul>
        <p class="card-text"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>